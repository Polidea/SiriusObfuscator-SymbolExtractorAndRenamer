+      file.open(PathToOutput);
+      if (file.fail()) {
+        file.close();
+        std::cout << "Failed to open file: " << PathToOutput << "\n";
+        return 1;
+      }
+      file << rso.str();
+      file.close();
+      
+      std::cout << "symbols.json:\n" << rso.str();
+      
+      return 0;
+    }
+    
+  } //namespace obfuscation
